                        style="-fx-background-color: #96846d;" text="Zapisz się">
                    <font>
                        <Font name="SansSerif Bold" size="18.0"/>
                    </font>
                </Button>
                <ImageView fitHeight="32.0" fitWidth="40.0" layoutX="703.0" layoutY="9.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@../images/registration.png"/>
                    </image>
                </ImageView>
                <ImageView fitHeight="47.0" fitWidth="50.0" layoutX="7.0" layoutY="22.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@../images/home1.png"/>
                    </image>
                </ImageView>
            </children>
        </Pane>
        <Pane layoutX="5.0" layoutY="152.0" prefHeight="450.0" prefWidth="900.0">
            <children>
                <TableView fx:id="booksTableView" layoutX="-6.0" prefHeight="450.0" prefWidth="900.0">
                    <columns>
                        <TableColumn fx:id="titleColumn" prefWidth="75.0" text="Nazwa"/>
                        <TableColumn fx:id="descColumn" prefWidth="75.0" text="Data"/>
                        <TableColumn fx:id="authorColumn" prefWidth="75.0" text="Opis"/>
                        <TableColumn fx:id="categoryColumn" prefWidth="210.0"/>

                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </children>
        </Pane>
    </children>
</AnchorPane>
