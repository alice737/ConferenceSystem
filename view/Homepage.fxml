                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Krakow"/>
                            <String fx:value="Warszawa"/>
                            <String fx:value="Kielce"/>
                        </FXCollections>
                    </items>

                </ComboBox>
                <DatePicker layoutX="30.0" layoutY="105.0" promptText="Data konferencji"
                            style="-fx-background-color: #c1b4a2;"/>
                <Button layoutX="374.0" layoutY="105.0" mnemonicParsing="false" style="-fx-background-color: #c1b4a2;"
                        text="Szukaj"/>
                <Label layoutX="56.0" layoutY="12.0" opacity="0.99" prefHeight="78.0" prefWidth="386.0"
                       text="KONFERENCJE" textAlignment="CENTER" textOverrun="LEADING_ELLIPSIS">
                    <font>
                        <Font name="Rockwell Bold" size="48.0"/>
                    </font>
                    <effect>
                        <Glow/>
                    </effect>
                </Label>
                <ImageView fitHeight="32.0" fitWidth="32.0" layoutX="545.0" layoutY="12.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@../images/Login.png"/>
                    </image>
                </ImageView>
                <Button fx:id="zalogujSie" layoutX="577.0" layoutY="12.0" mnemonicParsing="false"
                        onAction="#onClickZaloguj" prefHeight="32.0" prefWidth="122.0"
                        style="-fx-background-color: #96846d;" text="Zaloguj się">
                    <font>
                        <Font name="SansSerif Bold" size="18.0"/>
                    </font>
                </Button>
                <Button fx:id="zapiszSie" cache="true" depthTest="ENABLE" layoutX="703.0" layoutY="4.0"
